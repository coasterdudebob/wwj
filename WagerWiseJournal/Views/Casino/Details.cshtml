@model WagerWiseJournal.Models.Casino
@{
    ViewData["Title"] = "Casino Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Name</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Location Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@(Model.City ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">State</dt>
                        <dd class="col-sm-8">@(Model.State ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Zip Code</dt>
                        <dd class="col-sm-8">@(Model.ZipCode ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Country</dt>
                        <dd class="col-sm-8">@(Model.Country ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Coordinates</dt>
                        <dd class="col-sm-8">@Model.Latitude, @Model.Longitude</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Session History</h5>
                </div>
                <div class="card-body">
                    @if (Model.BettingSessions != null && Model.BettingSessions.Any())
                    {
                        <p>Total Sessions: @Model.BettingSessions.Count</p>
                        <p>Active Sessions: @Model.BettingSessions.Count(s => s.IsActive)</p>
                    }
                    else
                    {
                        <p>No betting sessions recorded at this location yet.</p>
                    }
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Map</h5>
                </div>
                <div class="card-body">
                    <div id="map" style="height: 300px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center;">
                        <p class="text-muted">Google Maps integration ready - Configure API key to enable map display</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Google Maps integration would go here
        // Example: initMap() function using Google Maps JavaScript API
    </script>
}
