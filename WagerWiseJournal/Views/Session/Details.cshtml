@model WagerWiseJournal.Models.BettingSession
@{
    ViewData["Title"] = "Session Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            Session at @Model.Casino.Name
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
        </h1>
        <div>
            @if (Model.IsActive)
            {
                <form asp-action="EndSession" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to end this session?')">
                        <i class="bi bi-stop-circle"></i> End Session
                    </button>
                </form>
            }
            <a asp-action="Index" class="btn btn-outline-primary">Back to Sessions</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Session Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Casino</dt>
                        <dd class="col-sm-7">@Model.Casino.Name</dd>
                        
                        <dt class="col-sm-5">Started</dt>
                        <dd class="col-sm-7">@Model.StartTime.ToString("g")</dd>
                        
                        @if (Model.EndTime.HasValue)
                        {
                            <dt class="col-sm-5">Ended</dt>
                            <dd class="col-sm-7">@Model.EndTime.Value.ToString("g")</dd>
                            
                            <dt class="col-sm-5">Duration</dt>
                            <dd class="col-sm-7">@((Model.EndTime.Value - Model.StartTime).TotalHours.ToString("F1")) hrs</dd>
                        }
                        else
                        {
                            <dt class="col-sm-5">Duration</dt>
                            <dd class="col-sm-7">@((DateTime.UtcNow - Model.StartTime).TotalHours.ToString("F1")) hrs</dd>
                        }
                        
                        <dt class="col-sm-5">Total Bets</dt>
                        <dd class="col-sm-7"><strong>@Model.Bets.Count</strong></dd>
                    </dl>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr />
                        <p class="mb-0"><small class="text-muted">Notes:</small><br />@Model.Notes</p>
                    }
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Financial Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Total Wagered</small>
                        <h4>$@Model.TotalWagered.ToString("N2")</h4>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Total Winnings</small>
                        <h4>$@Model.TotalWinnings.ToString("N2")</h4>
                    </div>
                    <hr />
                    <div>
                        <small class="text-muted">Net Profit/Loss</small>
                        <h3 class="@(Model.NetProfit >= 0 ? "text-success" : "text-danger")">
                            @(Model.NetProfit >= 0 ? "+" : "")$@Model.NetProfit.ToString("N2")
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Bets</h5>
                    @if (Model.IsActive)
                    {
                        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#addBetModal">
                            <i class="bi bi-plus-circle"></i> Add Bet
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Bets != null && Model.Bets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Game</th>
                                        <th class="text-end">Bet</th>
                                        <th class="text-end">Win</th>
                                        <th class="text-end">Net</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bet in Model.Bets.OrderByDescending(b => b.Timestamp))
                                    {
                                        <tr>
                                            <td>@bet.Timestamp.ToString("HH:mm")</td>
                                            <td>
                                                @bet.GameType
                                                @if (!string.IsNullOrEmpty(bet.Description))
                                                {
                                                    <br /><small class="text-muted">@bet.Description</small>
                                                }
                                            </td>
                                            <td class="text-end">$@bet.Amount.ToString("N2")</td>
                                            <td class="text-end">$@bet.Winnings.ToString("N2")</td>
                                            <td class="text-end">
                                                <strong class="@(bet.NetResult >= 0 ? "text-success" : "text-danger")">
                                                    @(bet.NetResult >= 0 ? "+" : "")$@bet.NetResult.ToString("N2")
                                                </strong>
                                            </td>
                                            <td>
                                                @if (Model.IsActive)
                                                {
                                                    <a asp-controller="Bet" asp-action="Edit" asp-route-id="@bet.Id" class="btn btn-sm btn-outline-primary">
                                                        Edit
                                                    </a>
                                                    <form asp-controller="Bet" asp-action="Delete" asp-route-id="@bet.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this bet?')">
                                                            Delete
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">No bets recorded yet. Add your first bet to start tracking!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.IsActive)
{
    <!-- Add Bet Modal -->
    <div class="modal fade" id="addBetModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Bet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-controller="Bet" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="SessionId" value="@Model.Id" />
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="GameType" class="form-label">Game Type</label>
                            <input type="text" name="GameType" class="form-control" required placeholder="e.g., Blackjack, Slots, Poker" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Amount" class="form-label">Bet Amount</label>
                            <input type="number" name="Amount" class="form-control" step="0.01" min="0" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Winnings" class="form-label">Winnings</label>
                            <input type="number" name="Winnings" class="form-control" step="0.01" min="0" value="0" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Description" class="form-label">Description (Optional)</label>
                            <input type="text" name="Description" class="form-control" placeholder="Additional details..." />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Bet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
