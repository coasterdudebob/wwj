@model WagerWiseJournal.Models.BettingSession
@{
    ViewData["Title"] = "Start New Session";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label for="CasinoId" class="form-label">Select Casino</label>
                            <select asp-for="CasinoId" class="form-select" required>
                                <option value="">-- Choose a Casino --</option>
                                @foreach (var casino in ViewBag.Casinos as IEnumerable<SelectListItem>)
                                {
                                    <option value="@casino.Value">@casino.Text</option>
                                }
                            </select>
                            <span asp-validation-for="CasinoId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add any notes about this session..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        
                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i> A new betting session will be created at the selected casino. 
                                You can add bets and track your performance during this session.
                            </small>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Start Session</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
